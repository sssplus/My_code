import random
from art import logo
EASY_TURNS = 10
HARD_TURNS = 5
def choose_num():
    return random.randint(1, 100)

def easy_level(user_guess, actual_num, turn):
        if user_guess==actual_num:
            print("You have guessed correct")
            return 0

        if user_guess > actual_num:
            turn -= 1
            print("Too high")
        elif user_guess < actual_num:
            turn -= 1
            print("Too low")
        else:
            turn -= 1
            print("Invalid guess")
            # return user_guess not in actual_number
        return turn



def hard_level(user_guess, actual_num, turn):
        if user_guess==actual_num:
            print("You have guessed correct")
            return 0
        if user_guess > actual_num:
            turn -= 1
            print("Too high")
        elif user_guess < actual_num:
            turn -= 1
            print("Too low")
        else:
            turn -= 1
            print("Invalid guess")
            # return user_guess not in actual_number
        return turn



def set_difficulty():
    # set_difficulty(turn)
    while True:
        level = input("Choose a difficulty. Type 'e' or Easy and 'h' for Hard: ").lower()
        if level == "e":
            return easy_level, EASY_TURNS
        elif level=="h":
            return hard_level, HARD_TURNS
        else:
            print("Invalid input!")


def check_guess(user_guess, actual_num, turn):
    pass

def play_game():
    print(logo)
    print("\n Welcome to the number guessing game")
    actual_num = choose_num()
    game_level_function, turn=set_difficulty()
    user_guess=0

    while turn>0:
        print(f"You have {turn}turns left!")
        user_guess=int(input("Make a guess"))
        turn = game_level_function(user_guess, actual_num, turn)
    if turn==0 and user_guess!=actual_num:
        print("You rae out of turn!")
        print(f"The number is: {actual_num}")
    elif user_guess==actual_num:
        print("Well Guess!")

play_game()
